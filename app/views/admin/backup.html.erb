<h1>Backup y Restauración del Sistema</h1>
<p style="margin: 30px;">
  <%= link_to "Descargar backup", create_backup_path, class: "btn btn-primary", download: true %>
</p>
<hr>
<%= form_with url: restore_backup_path, method: :post, multipart: true do %>
  <p>
    <label for="backup_file">Archivo de backup:</label>
    <%= file_field_tag :backup_file %>
  </p>
  <p>
    <%= button_tag "Restaurar (modo estricto)", name: "mode", value: "0", type: "submit", class: "btn btn-warning", data: { confirm: "¿Estás seguro de restaurar en modo estricto?" } %>
    <%= button_tag "Restaurar (modo tolerante)", name: "mode", value: "1", type: "submit", class: "btn btn-danger", data: { confirm: "¿Restaurar ignorando diferencias de esquema?" } %>
  </p>
<% end %>
