<%= render "shared/live_search" %>

<% only_admin_content do %>
    <div class="admin-actions">
        <%= link_to "Edit", edit_categ_path(@x), class: "btn btn-primary" %>
        <%= link_to "Destroy", categ_path(@x), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
    </div>
<% end %>

<div class="clase-main">
    <%= render "categ", x: @x %>
<div>
    
<h1>Habilidades relacionadas:</h1>
<div class="grid-container">
    <% @x.habilidads.each do |habil| %>
        <%= render "habilidads/habilidad", habil: habil %>
    <% end %>
</div>
<% clases=@x.clases
   if clases.any? %>
    <h1>Clases relacionadas</h1>
    <div class="miniListadoClases">
        <% clases.each do |cl| %>
            <%= link_to cl.nombre, cl, class:"carta-title" %>
        <% end %>
    </div>
<% end %>