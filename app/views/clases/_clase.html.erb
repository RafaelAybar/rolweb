<div class="carta carta_clase">
    <div>
        <div class="carta-header carta-header_clase">
            <%= link_to clase.nombre, clase, class:"carta-title carta-title_clase" %>
        </div>
        <%= clase_subtitulo(clase) %>
        <div class="carta-details">
            <div class="carta-description carta-description_clase"><%= clase.efecto %></div>
            <div class="carta-description carta-description_clase"><%= clase.descripcion %></div>
        </div>
    </div>
    <div class="carta-image carta-image_clase">
        <%= render "shared/image", image: clase.image %>
    </div>
</div>
