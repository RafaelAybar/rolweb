<%= form_with model: clase do |form| %>
  <div>
    <%= form.label :nombre %><br>
    <%= form.text_field :nombre %>
  </div>
  
  <div>
    <%= form.label :parent_ids, 'Madres' %><br>
    <%= form.collection_select :parent_ids, Clase.order(:nombre), :id, :nombre, {}, multiple: true, class: "form-select" %>
  </div>
  
  <div>
    <%= form.label :child_ids, 'Hijas' %><br>
    <%= form.collection_select :child_ids,  Clase.order(:nombre), :id, :nombre, {}, multiple: true, class: "form-select" %>
  </div>

  <div>
    <%= form.label :efecto %><br>
    <%= form.text_area :efecto %><br>
  </div>
  
  <div>
    <%= form.label :descripcion %><br>
    <%= form.text_area :descripcion %><br>
  </div>

  <div>
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
  <br>

  <div>
    <%= form.submit %>
  </div>
<% end %>