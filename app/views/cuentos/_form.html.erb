<%= form_with(model: cuento) do |form| %>

  <div>
    <%= form.label :nombre%><br>
    <%= form.text_field :nombre %><br>
  </div>

  <div>
    <%= form.label :titulo%><br>
    <%= form.text_field :titulo %><br>
  </div>

  <div>
    <%= form.label :spoilers%><br>
    <%= form.check_box :spoilers %><br>
  </div>

  <div>
    <%= form.label :prioridad %><br>
    <%= form.number_field :prioridad, in: -10..10, value: form.object.prioridad || 0 %><br>
  </div>

  <div>
    <%= form.label :texto %><br>
    <%= form.rich_text_area :texto %><br>
  </div>

  
  <%= render "shared/fcs", p:"etiquet", form: form %>
  <%= render "shared/fcs", p:"picture", form: form %>
  <%= render "shared/fcs", p:"mob", form: form %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
