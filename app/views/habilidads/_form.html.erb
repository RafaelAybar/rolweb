<%= form_with model: habil do |form| %>
  <div>
    <%= form.label :nombre %><br>
    <%= form.text_field :nombre %>
  </div>
  <br>

  <div>
    <%= form.label :nivel %><br>
    <%= form.number_field :nivel, in: 0..100 %><br>
  </div>
  <br>

  <%= render "shared/fcs", p:"clase", form: form %>
  <%= render "shared/fcs", p:"item", form: form %>
  <%= render "shared/fcs", p:"categ", form: form %>
  <%= render "shared/fcs", p:"mob", form: form %>

  <br>

  <div>
    <%= form.label :efecto %><br>
    <%= form.rich_text_area :efecto %><br>
  </div>
  <br>

  <div>
    <%= form.label :tipo %><br>
    <%= form.select :tipo, options_for_select([
        ["activa", 0], ["pasiva", 1], ["intantáneo",5], ["complemento", 3], ["creación", 4], ["especial", 2]
      ], habil.tipo || 0) %><br>
  </div>
  <br>

  <div>
    <%= form.label :oculto %><br>
    <%= form.check_box  :oculto %><br>
  </div>
  <br>

  <div>
    <%= form.submit %>
  </div>
<% end %>