<% only_admin_content do %>
    <div class="admin-actions">
        <%= link_to "Edit", edit_habilidad_path(@x), class: "btn btn-primary" %>
        <%= link_to "Destroy", habilidad_path(@x), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
    </div>
<% end %>

<div class="miniListadoClases">
    <% @x.clases.each do |clase| %>
        <%= link_to clase.nombre, clase, class:"carta-title" %>
    <% end %>
</div>

<div class="clase-main">
    <div class="carta carta_extendida texto_info-margins">
        <%= render "habilidads/habilidad_inner", habil:  @x%>
    </div>
</div>
    
<h1>Items relacionados:</h1>
<div class="grid-container">
    <% @x.items.order(:nombre).each do |it| %>
        <%= render "items/item", item: it %>
    <% end %>
</div>