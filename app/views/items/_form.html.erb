<%= form_with model: item do |form| %>
  <div>
    <%= form.label :nombre %><br>
    <%= form.text_field :nombre %>
  </div>
  <br>

  <%= render "shared/fcs", p:"categ", form: form %>

  <div>
    <%= form.label :coste %><br>
    <%= form.number_field :coste, in: 0..100, step: 0.01 %><br>
  </div>
  <br>

  <div>
    <%= form.label :peso %><br>
    <%= form.number_field :peso, in: 0..100 %><br>
  </div>
  <br>

  <%= render "shared/fcs", p:"clase", form: form %>
  <%= render "shared/fcs", p:"habilidad", form: form %>

  <div>
    <%= form.label :efecto %><br>
    <%= form.rich_text_area :efecto %><br>
  </div>
  <br>

  <div>
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
  <% if form.object.image %>
    <div>
      <div class="form-image">
        <%= render "shared/image", image: form.object.image %>
      </div>
      <label>
        <%= form.check_box :remove_image %> Eliminar imagen
      </label>
    </div>
  <% end %>
  <br>

  <div>
    <%= form.submit %>
  </div>
<% end %>